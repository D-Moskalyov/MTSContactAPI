<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
            android:onClick="onClickAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auth"
            android:id="@+id/buttonA"
            android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:onClick="onClickContactsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts Count"
            android:id="@+id/buttonCC"
            android:layout_below="@+id/buttonVC" android:layout_alignLeft="@+id/buttonVC"
            android:layout_alignStart="@+id/buttonVC"/>
    <Button
            android:onClick="onClickUploadContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Contacts"
            android:id="@+id/buttonCS"
            android:layout_below="@+id/buttonCC" android:layout_alignLeft="@+id/buttonA"
            android:layout_alignStart="@+id/buttonA"/>
    <Button
            android:onClick="onClickDownloadContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Contacts"
            android:id="@+id/buttonCopyM"
            android:layout_below="@+id/buttonCS" android:layout_alignLeft="@+id/buttonCS"
            android:layout_alignStart="@+id/buttonCS"/>
    <Button
            android:onClick="onClickDownloadBackupList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Backup List"
            android:id="@+id/buttonCont"
            android:layout_below="@+id/buttonA" android:layout_alignLeft="@+id/buttonA"
            android:layout_alignStart="@+id/buttonA"/>
    <Button
            android:onClick="onClickDownloadBackupContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Backup Contacts"
            android:id="@+id/buttonSC"
            android:layout_below="@+id/buttonCont" android:layout_alignLeft="@+id/buttonCS"
            android:layout_alignStart="@+id/buttonCS"/>
    <Button
            android:onClick="onClickContactsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts List"
            android:id="@+id/buttonVC"
            android:layout_below="@+id/buttonSC" android:layout_alignLeft="@+id/buttonSC"
            android:layout_alignStart="@+id/buttonSC"/>

</RelativeLayout>
